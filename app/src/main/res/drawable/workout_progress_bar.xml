<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- From: https://stackoverflow.com/questions/16893209/how-to-customize-a-progress-bar-in-android -->

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/colorBackgroundProgressBar"
                android:centerColor="@color/colorBackgroundProgressBar"
                android:centerY="1.0"
                android:endColor="@color/colorWellness"
                android:angle="0"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#007A00"
                    android:centerColor="#007A00"
                    android:centerY="1.0"
                    android:endColor="#06101d"
                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
</layer-list>