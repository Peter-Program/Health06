<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Workout.WorkoutActivity">

    <Button
        android:id="@+id/todayButton"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="250dp"
        android:background="@color/colorWorkout"
        android:text="@string/todaysWorkoutButton"
        android:onClick="onClickEnterTodaysWorkout"
        android:textColor="@color/colorBackground"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customWorkoutButton"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_marginTop="375dp"
        android:onClick="onClickEnterCustomWorkout"
        android:background="@color/colorWorkout"
        android:text="@string/customWorkoutPageTitle"
        android:textColor="@color/colorBackground"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>